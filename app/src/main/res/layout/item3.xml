        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11111111"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
        android:textColor="@android:color/holo_red_light"
        android:layout_gravity="center"
        />
</LinearLayout>